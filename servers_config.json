{
  "servers": [
    {
      "name": "simple-prompt-stdio",
      "command": "uv",
      "args": ["run", "mcp-simple-prompt"],
      "transport": "stdio"
    },
    {
      "name": "simple-prompt-sse",
      "command": "uv",
      "args": ["run", "mcp-simple-prompt", "--transport", "sse", "--port", "8000"],
      "transport": "sse",
      "port": 8001
    }
  ]
}